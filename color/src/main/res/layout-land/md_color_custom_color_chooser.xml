<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorArgbPage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/color_grid_padding_bottom"
    android:paddingLeft="@dimen/color_grid_item_padding_double"
    android:paddingRight="@dimen/color_grid_item_padding_double"
    tools:ignore="HardcodedText"
    >

  <FrameLayout
      android:layout_width="@dimen/color_argb_preview_parent_size_land"
      android:layout_height="@dimen/color_argb_preview_parent_size_land"
      android:layout_marginEnd="@dimen/color_argb_preview_parent_margin_end"
      android:layout_marginRight="@dimen/color_argb_preview_parent_margin_end"
      android:background="@drawable/transparent_rect_repeat"
      >

    <View
        android:id="@+id/argbPreviewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

  </FrameLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <LinearLayout
        android:id="@+id/alphaFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/alpha_label"
          android:layout_width="wrap_content"

          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="A"
          style="@style/TextAppearance.AppCompat.Medium"
          />

      <SeekBar
          android:id="@+id/alpha_seeker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:max="255"
          />

      <TextView
          android:id="@+id/alpha_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:ems="2"
          android:gravity="right|end"
          android:text="0"
          style="@style/TextAppearance.AppCompat.Medium"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/red_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="R"
          tools:ignore="HardcodedText"
          style="@style/TextAppearance.AppCompat.Medium"
          />

      <SeekBar
          android:id="@+id/red_seeker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:max="255"
          />

      <TextView
          android:id="@+id/red_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:ems="2"
          android:gravity="right|end"
          android:text="0"
          style="@style/TextAppearance.AppCompat.Medium"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/green_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="G"
          tools:ignore="HardcodedText"
          style="@style/TextAppearance.AppCompat.Medium"
          />

      <SeekBar
          android:id="@+id/green_seeker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:max="255"
          />

      <TextView
          android:id="@+id/green_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:ems="2"
          android:gravity="right|end"
          android:text="0"
          style="@style/TextAppearance.AppCompat.Medium"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/blue_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="B"
          tools:ignore="HardcodedText"
          />

      <SeekBar
          android:id="@+id/blue_seeker"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:max="255"
          style="@style/TextAppearance.AppCompat.Medium"
          />

      <TextView
          android:id="@+id/blue_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:ems="2"
          android:gravity="right|end"
          android:text="0"
          style="@style/TextAppearance.AppCompat.Medium"
          />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>
